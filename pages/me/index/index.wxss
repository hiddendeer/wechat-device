.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 466rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.user-info {
  color: var(--orange);
  font-size: 50rpx;
}

.wait-sign {
  color: var(--ghostWhite);
  font-size: 60rpx;
  font-family:"Times New Roman";
  /* font-weight: bold; */
}

.user-score {
  color: var(--orange);
  font-size: 33rpx;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 100rpx;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,
.mapBox {
  width: 750rpx;
  height: 300rpx;
}

.userinfo_avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  display: flex;
  overflow: hidden;
  text-align: center;
}