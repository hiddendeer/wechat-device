<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}"><view slot="backText">返回</view>
  <view slot="content">注册</view>
</cu-custom>
<view class='header'>
  <image class='header-img' src='/images/device_banner.jpeg'></image>
</view>

<view class="login_container">
  <view class="login_view">
    <text class="login_lable">账号：</text>
    <input class="login_text" placeholder="请输入登录账号" bindinput="usernameInput" />
  </view>
  <view class="login_view">
    <text class="login_lable">密码：</text>
    <input class="login_text" placeholder="请输入密码" password="true" bindinput="passwordInput" />
  </view>
  <!-- <view class="login_view">
    <text class="login_lable">密码：</text>
    <input class="login_text" placeholder="请再次输入密码" password="true" bindinput="twoPassword" />
  </view> -->
   <view class="login_view">
    <text class="login_lable">手机号：</text>
    <input class="login_text" placeholder="请输入手机号"  bindinput="phone" />
  </view>
     <view class="login_view">
    <text class="login_lable">称呼</text>
    <input class="login_text" placeholder="请输入称呼" bindinput="full_name" />
  </view>
  <view>

    <view class="cu-bar btn-group">
      <button class="cu-btn bg-blue shadow-blur round" bindtap='submit'>注册</button>
    </view>
  </view>
</view>
